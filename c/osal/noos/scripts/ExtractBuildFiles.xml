<?xml version="1.0"?>
<project name="ExtractBuildFiles" default="extract_build_files" basedir=".">

	<target name="extract_build_files">
		<delete dir=".\temp"/>
		<mkdir dir=".\temp"/> 

		<!-- get the artifact zip file from the build machine -->	
		<copy todir=".\temp" overwrite="true">
			<fileset dir="\\swe-bld1\c$\Hudson\workspace\OSAL\scripts\temp\build_results">
				<include name="**/*.zip"/>
			</fileset>
		</copy>

		<!-- unzip artifact to the VDSP_HOME installation -->	
		<unzip dest="${VDSP_HOME}">
			<fileset dir=".\temp">
				<include name="**/*.zip"/>
			</fileset>
		</unzip>
	
	</target>

</project>
